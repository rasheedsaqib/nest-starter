{
  "roots": [
    "<rootDir>"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "<rootDir>/**/*.ts",
    "!<rootDir>/main.ts",
    "!<rootDir>/modules/**/*.module.ts"
  ],
  "coverageDirectory": "../build/coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  }
}